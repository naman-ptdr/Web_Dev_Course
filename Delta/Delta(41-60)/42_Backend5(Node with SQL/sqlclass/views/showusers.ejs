<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
    <style>
      table,
      tr,
      th,
      td {
        border: 2px solid black;
      }
    </style>
  </head>
  <body>
    <table>
      <tr>
        <th>Id</th>
        <th>Email</th>
        <th>Username</th>
      </tr>
      <% for(user of users) { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td>
            <form method="GET" action="/user/<%= user.id %>/edit">
                <button>Edit Username</button>
        </form>
    </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
